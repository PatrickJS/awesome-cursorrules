{
    "version": "1.0.0",
    "languages": {
        "typescript": {
            "rules": [
                {
                    "id": "no-any",
                    "level": "error",
                    "description": "Avoid using the 'any' type - it defeats TypeScript's type safety"
                },
                {
                    "id": "strict-null-checks",
                    "level": "error",
                    "description": "Always enable strict null checks for better type safety"
                },
                {
                    "id": "explicit-return-type",
                    "level": "error",
                    "description": "Use explicit return types on functions"
                },
                {
                    "id": "no-unused-vars",
                    "level": "error",
                    "description": "Remove unused variables and imports"
                }
            ]
        },
        "python": {
            "rules": [
                {
                    "id": "type-hints",
                    "level": "error",
                    "description": "Always use type hints for function parameters and return values"
                },
                {
                    "id": "f-strings",
                    "level": "error",
                    "description": "Use f-strings instead of older string formatting methods"
                },
                {
                    "id": "docstrings",
                    "level": "error",
                    "description": "Include docstrings for all functions and classes"
                },
                {
                    "id": "line-length",
                    "level": "error",
                    "description": "Keep lines under 88 characters"
                }
            ]
        },
        "javascript": {
            "rules": [
                {
                    "id": "prefer-const",
                    "level": "error",
                    "description": "Use const for variables that aren't reassigned"
                },
                {
                    "id": "no-var",
                    "level": "error",
                    "description": "Never use var, prefer let or const"
                },
                {
                    "id": "template-literals",
                    "level": "error",
                    "description": "Use template literals instead of string concatenation"
                },
                {
                    "id": "arrow-functions",
                    "level": "error",
                    "description": "Use arrow functions for callbacks"
                }
            ]
        }
    }
}